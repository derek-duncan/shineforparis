extends ./templates/default.jade

block body
  .lights
  main.main-content
    section.centerFeature
      .heartButton
        img.icon.icon--empty(src='/img/heart-icon-empty.svg' onerror='this.src="/img/heart-icon-empty.png"' alt='Send a Light' width='200')
        img.icon.icon--filled.icon--bounce(src='/img/heart-icon-filled.svg' onerror='this.src="/img/heart-icon-filled.png"' alt='Send a Light' width='200')
      h1.hashtag #shineonparis
      p.tagline Our hearts are shining on you, Paris <3
      p.counter
        span.count 0
        |  lights shone.
      .social.hide
        span.social-cry Shine Brighter:
        a(href="http://twitter.com/intent/tweet?url=http://shineonparis.com/&text=Our hearts are with Paris today. Here's how I'm letting them know ->&hashtags=shineonparis,ParisAttacks,RTforParis" target='_blank' class='twitterShare') Twitter
        a(href="http://www.facebook.com/sharer.php?u=http://shineonparis.com/" target='_blank' class='facebookShare') Facebook
